<Window x:Class="KenshiModTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KenshiModTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="867" Width="988">
    <Grid>
        <ListBox  x:Name="listBox" 
            Padding="2"
            SelectionMode="Extended" Margin="10,51,10,196">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Visit mod page" CommandParameter="{Binding}"  Click="CheckModPage_Click"></MenuItem>
                    <MenuItem Header="Active Selected Mods" CommandParameter="{Binding}"  Click="ActiveMods"></MenuItem>
                    <MenuItem Header="Deactive Selected Mods" CommandParameter="{Binding}"  Click="DeactiveMods"></MenuItem>
                    <MenuItem Header="Toggle Active Selected Mods" CommandParameter="{Binding}"  Click="ToggleActive"></MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"  />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="400" />
                        </Grid.ColumnDefinitions>
                        <RibbonCheckBox Grid.Column="1" IsChecked="{Binding Active}" Checked="UpdateCheckBox" Unchecked="UpdateCheckBox"></RibbonCheckBox>
                        <RibbonTextBox Grid.Column="0" Text="{Binding Order}"  KeyDown="RibbonTextBox_KeyDown"></RibbonTextBox>
                        <TextBlock Grid.Column="2" Text="{Binding DisplayName}" Background="{Binding Color}"></TextBlock>
                        <TextBlock Grid.Column="3" Text="{Binding DisplayCategories}"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <Button x:Name="BtnSaveModList" Content="Save mod order" HorizontalAlignment="Left" Margin="14,707,0,0" VerticalAlignment="Top" Width="113" Click="SaveModList_Click"/>
        <Button x:Name="BtnGameFolder" Content="Open Game Folder" HorizontalAlignment="Left" Margin="14,732,0,0" VerticalAlignment="Top" Width="113" Click="BtnGameFolder_Click"/>
        <Button x:Name="GameModFolder" Content="Open Game Mod Folder" HorizontalAlignment="Left" Margin="132,732,0,0" VerticalAlignment="Top" Click="GameModFolder_Click"/>
        <Button x:Name="BtnSteamFolder" Content="Open Steam Mod Folder" HorizontalAlignment="Left" Margin="269,732,0,0" VerticalAlignment="Top" Click="BtnSteamFolder_Click"/>
        <Button x:Name="btnOrder" Content="Order Mods (Beta!)" HorizontalAlignment="Left" Margin="132,707,0,0" VerticalAlignment="Top" Width="132" Click="btnOrder_Click"/>
        <Button x:Name="saveModProfile" Content="Save mod profile" HorizontalAlignment="Left" Margin="509,732,0,0" VerticalAlignment="Top" Width="114" Click="saveModProfile_Click"/>
        <Button x:Name="btnLoadProfile" Content="load mod Profile" HorizontalAlignment="Left" Margin="628,732,0,0" VerticalAlignment="Top" Width="114" Click="btnLoadProfile_Click"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" Height="20" TextChanged="textBox_TextChanged" UndoLimit="20" KeyDown="txtSearch_KeyDown"/>
        <Label x:Name="lblFind" Content="Find On List" HorizontalAlignment="Left" Margin="14,0,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblSearchInfo" Content="Label" HorizontalAlignment="Left" Margin="115,0,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnLaunchGame" Content="Launch Game (SteamOnly)" HorizontalAlignment="Left" Margin="509,757,0,0" VerticalAlignment="Top" Click="btnLaunchGameClick"/>
        <Button x:Name="btnReloadMods" Content="Refresh List" HorizontalAlignment="Left" Margin="581,26,0,0" VerticalAlignment="Top" Click="btnReloadMods_Click"/>
    </Grid>
</Window>
